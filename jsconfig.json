{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./build/",
    "target": "es5",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["./src/**/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
